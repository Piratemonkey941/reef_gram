<div class="container">  
  <div class="row ">
    <div 
    class=" text-center ml-xl-5 col-xl-12 col-lg-10 col-md-8 col-sm-6 col-6 my-block" 
    style="  margin-left: 100px; margin-top: 20px; padding: 20px; background-color: #f2f2f2; z-index:10;">
      <h1> <%= @user.username %> </h1>
    <h4> <%= @user.email %> </h4>
    <h1> <%= @user.bio %> </h1>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, style:"width: 100px; height: 100px;" %>
    <% end %>
    <% if current_user.following?(@user) %>
      <%= button_to "Unfollow", unfollow_path(@user)%>
    <% elsif current_user.sent_follow_request_to?(@user) %>
      <%= button_to "Cancel follow request", cancel_path(@user) %>
    <% else %>
      <% if @user.id == current_user.id %>
      <% else %>
        <%= button_to "Follow", follow_path(@user)%>
      <% end %>
    <% end %>
    
    <% @user.followers.each do |follower| %>
      <%= render follower %>
    <% end %>
    <hr>
    <% @user.following.each do |following| %>
      <%= render following %>
    <% end %>
  </div>
</div>

