<div class="container" style="z-index: 15;">  
  <div class="row ">
    <div 
      class=" text-center ml-xl-5 col-xl-12 col-lg-10 col-md-8 col-sm-6 col-6 my-block" 
      style="  margin-left: 100px; margin-top: 20px; padding: 20px; background-color: #f2f2f2; z-index:10;"
    >





    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { method: :put })  do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" style="margin-top: 1rem;">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field" style="margin-top: 1rem;">
       
        <%= f.file_field :avatar,  class:"form-control" %>
      </div>

          <div class="field" style="margin-top: 1rem;">
        <%= f.label :bio %><br />
        <%= f.text_field :bio,  class:"form-control" %>
      </div>
      
      <div class="field" style="margin-top: 1rem;">
        <%= f.label :username %><br />
        <%= f.text_field :username,  class:"form-control" %>
      </div>


      <div class="field" style="margin-top: 1rem;">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field" style="margin-top: 1rem;">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field" style="margin-top: 1rem;">
        <%= f.label :current_password %> <i></i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
      </div>

      <div class="actions" style="margin-top: 1rem;">
        <%= f.submit "Update", class:"btn btn-success col-12" %>
        <%= link_to "Back", :back,class:"btn btn-outline-info", style:"margin-top: 1rem ;"%>
      </div>
    <% end %>
    <div class="actions" style="margin-top: 1rem;">
      <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger", id: "sign-out-button" do %>
        Sign Out
      <% end %>
    </div>
    <hr>

    <h3 style="margin-top: 1rem;">Cancel my account</h3>

    <div style="margin-top: 1rem;"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></div>

    
    

</div>
</div>
</div>

<script>
  $(document).ready(function() {
    $("#sign-out-button").click(function() {
      window.location.href = "/"; // Change this to the URL you want to redirect to
    });
  });
</script>
